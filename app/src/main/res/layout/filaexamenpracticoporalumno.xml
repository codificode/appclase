<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filaExamenPracticoPorAlumno"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textViewPreguntaExamenPracticoPorAlumno"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        />


    <RadioGroup
        android:id="@+id/radioGroupExamenPracticoPorAlumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/radioButtonSiExamenPracticoPorAlumno"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text= "" />
        <RadioButton
            android:id="@+id/radioButtonNoExamenPracticoPorAlumno"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text= "" />

    </RadioGroup>

</LinearLayout>