<?xml version="1.0" encoding="utf-8"?>

    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Negativos">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="5dp">

            <!-- Parte 1: Fila de encabezado -->
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textViewEncabezadoNumeroNegativos"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:text="Num"/>

                <TextView
                    android:id="@+id/textViewEncabezadoNombreNegativos"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:text="Nombre"/>
                <TextView
                    android:id="@+id/textViewEncabezadoRadioButton1Negativos"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:text="Se para/\nse lava/\nse cambia/\nantes de\ntiempo" />

                <TextView
                    android:id="@+id/textViewEncabezadoRadioButton2Negativos"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:text="No epis" />
                <TextView
                    android:id="@+id/textViewEncabezadoRadioButton3Negativos"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:text="No recoge" />
                <TextView
                    android:id="@+id/textViewEncabezadoRadioButton4Negativos"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:text="juega/\nmolesta" />
                <TextView
                    android:id="@+id/textViewEncabezadoRadioButton5Negativos"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:text="No trabaja" />
                <TextView
                    android:id="@+id/textViewEncabezadoRadioButton6Negativos"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:text="Otros" />

                <TextView
                    android:id="@+id/textViewEncabezadoComentariosNegativos"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:text="Comentarios" />

            </LinearLayout>

            <!-- Parte 2: Filas -->
            <LinearLayout
                android:id="@+id/linearLayoutFilasNegativos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <!-- Parte 3: Fila con botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonEnviarNegativos"
                    android:layout_width="110dp"
                    android:layout_height="48dp"
                    android:onClick="enviar"
                    android:paddingHorizontal="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Enviar" />

                <Button
                    android:id="@+id/buttonVolverNegativos"
                    android:layout_width="110dp"
                    android:layout_height="48dp"
                    android:onClick="volver"
                    android:paddingHorizontal="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Volver" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    </HorizontalScrollView>
