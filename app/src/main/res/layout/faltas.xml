<?xml version="1.0" encoding="utf-8"?>

<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Faltas">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="5dp">

            <!-- Parte 1: Fila de encabezado -->
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textViewEncabezadoNumeroFaltas"
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:text="Num"/>

                <TextView
                    android:id="@+id/textViewEncabezadoNombreFaltas"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:text="Nombre"/>
                <TextView
                    android:id="@+id/textViewEncabezadoCheckBoxPrimeraFaltas"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:text="Primera" />

                <TextView
                    android:id="@+id/textViewEncabezadoCheckBoxSegundaFaltas"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:text="Segunda" />
                <TextView
                    android:id="@+id/textViewEncabezadoCheckBoxTerceraFaltas"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:text="Tercera" />
                <TextView
                    android:id="@+id/textViewEncabezadoCheckBoxRetr1Faltas"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:text="Retraso1" />
                <TextView
                    android:id="@+id/textViewEncabezadoCheckBoxRetr2Faltas"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:text="Retraso2" />
                <TextView
                    android:id="@+id/textViewEncabezadoCheckBoxRetr3Faltas"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center"
                    android:text="Retraso3" />

            </LinearLayout>

            <!-- Parte 2: Filas -->
            <LinearLayout
                android:id="@+id/linearLayoutFilasFaltas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <!-- Parte 3: Fila con botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonEnviarFaltas"
                    android:layout_width="110dp"
                    android:layout_height="48dp"
                    android:onClick="enviar"
                    android:paddingHorizontal="10dp"
                    android:layout_marginTop="30dp"
                    android:text="Enviar" />


                <Button
                    android:id="@+id/buttonVolverFaltas"
                    android:layout_width="110dp"
                    android:layout_height="48dp"
                    android:onClick="volver"
                    android:paddingHorizontal="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:text="Volver" />

                <TextView
                    android:id="@+id/textViewFaltasHueco"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:text="-" />

                <Button
                    android:id="@+id/buttonQuitarFaltas"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="80dp"
                    android:backgroundTint="?android:attr/colorMultiSelectHighlight"
                    android:onClick="quitarFaltasAviso"
                    android:paddingHorizontal="10dp"
                    android:text="Quitar"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</HorizontalScrollView>
