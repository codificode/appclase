<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/botonElegirGrupoInicioPrograma"
        android:layout_width="145dp"
        android:layout_height="78dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="96dp"
        android:onClick="opcionesGrupo"
        android:text="Ir a grupo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonAgregarGrupoInicioPrograma"
        android:layout_width="145dp"
        android:layout_height="72dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="56dp"
        android:onClick="agregarGrupo"
        android:text="Agregar grupo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonElegirGrupoInicioPrograma" />

    <Button
        android:id="@+id/botonAgregarAlumnoInicioPrograma"
        android:layout_width="145dp"
        android:layout_height="81dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="56dp"
        android:onClick="agregarAlumno"
        android:text="Agregar alumno y nÃºmero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonAgregarGrupoInicioPrograma" />

    <Spinner
        android:id="@+id/spinnerGruposInicioPrograma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="220dp"
        android:layout_marginTop="8dp"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/botonElegirGrupoInicioPrograma"
        app:layout_constraintVertical_bias="0.008" />

    <Button
        android:id="@+id/button9"
        android:layout_width="120dp"
        android:layout_height="61dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="524dp"
        android:onClick="baseDatos"
        android:text="Basedatos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>