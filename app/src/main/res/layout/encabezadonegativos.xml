<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/textViewEncabezadoNumeroNegativos"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:text="Num"/>

    <TextView
        android:id="@+id/textViewEncabezadoNombreNegativos"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        android:text="Nombre"/>
    <TextView
        android:id="@+id/textViewEncabezadoRadioButton1Negativos"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:text="Se para/\nse lava/\nse cambia/\nantes de\ntiempo" />

    <TextView
        android:id="@+id/textViewEncabezadoRadioButton2Negativos"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        android:text="No recoge" />
    <TextView
        android:id="@+id/textViewEncabezadoRadioButton3Negativos"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        android:text="juega/\nmolesta" />
    <TextView
        android:id="@+id/textViewEncabezadoRadioButton4Negativos"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        android:text="No trabaja" />
    <TextView
        android:id="@+id/textViewEncabezadoRadioButton5Negativos"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        android:text="Otros" />

    <TextView
        android:id="@+id/textViewEncabezadoComentariosNegativos"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        android:text="Comentarios" />

</LinearLayout>
